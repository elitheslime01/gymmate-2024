{
  "version": 2,
  "buildCommand": "cd frontend && npm run build",
  "env": {
    "MONGO_URI": "@mongo_uri",
    "PORT": "5000",
    "ALLOCATION_INTERVAL_TIME": "0",
    "NODE_ENV": "production"
  },
  "functions": {
    "api/index.js": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/dist/index.html",
      "status": 200
    }
  ]
}
