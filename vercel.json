{
  "version": 2,
  "buildCommand": "cd frontend && npm run build",
  "env": {
    "MONGO_URI": "@mongo_uri",
    "PORT": "5000",
    "ALLOCATION_INTERVAL_TIME": "0",
    "NODE_ENV": "production"
  },
  "functions": {
    "api/index.js": {
      "memory": 1024,
      "maxDuration": 60,
      "runtime": "nodejs18.x"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html",
      "status": 200
    }
  ],
  "outputDirectory": "frontend/dist",
  "framework": "vite"
}
